<% provide(:title, "Login") %>

<section>
    <div class="text-white text-center mt-3">
        <h1 class="brand-name">TRIFLES</h1>
        <blockquote class="blockquote">
            <p class="mb-0">Live as if you were to die tomorrow. Learn as if you were to live forever.</p>
            <footer class="blockquote-footer"><cite title="Mahatma Gandhi">Mahatma Gandhi</cite></footer>
        </blockquote>
    </div>
    <div class="login-container container mt-5">
	    <div class="row mb-5">
		    <div class="col-md-4 login-sec">
		        <h2 class="text-center">Login</h2>
		         <%= form_for(:session, url: login_path(anchor: 'auth'), html: { class: 'login-form', id: 'auth' }) do |f| %>
                    <% if flash[:notice] %>
                        <div class="alert alert-danger center">
                        <%= notice %>
                        </div>
                    <% end %>
                    <div class="form-group">
                        <%= f.label :email %>
                        <%= f.email_field :email, class: 'form-control',
                                                placeholder: 'You\'ve got a registered email?' %>
                    </div>
                    <div class="form-group">
                        <%= f.label :password %>
                        <%= f.password_field :password, class: 'form-control', 
                                                        placeholder: 'How \'bout password?' %>
                    </div>
                    <div class="form-group">
                        <%= f.check_box :remember_me %>
                        <small class="text-muted">Remember me on this computer</small>                   
                    </div>
                    <div class="form-group text-right">
                        <%= link_to "Sign-up", signup_path(anchor: 'auth'), class: 'btn btn-link' %>
                        <%= f.submit "Login", class: 'btn btn-primary' %>
                    </div>
                    
                <% end %>
		    </div>
		    <div class="col-md-8 banner-sec">
                <div id="carouselExampleIndicators" class="carousel slide carousel-slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <%= image_tag 'auth_image-1.jpeg', class: 'd-block auth-image', alt: "test1" %>
                            <div class="carousel-caption d-none d-md-block">
                                <div class="banner-text">
                                    <h2>Socialize</h2>
                                    <p>Follow the progress of other users and social with them.</p>
                                </div>	
                            </div>
                        </div>
                        <div class="carousel-item">
                            <%= image_tag 'auth_image-2.jpeg', class: 'd-block auth-image', alt: "test2" %>
                            <div class="carousel-caption d-none d-md-block">
                                <div class="banner-text">
                                    <h2>Improve your grammar</h2>
                                    <p>Some categories are available to test and let you improve your english grammar</p>
                                </div>	
                            </div>
                        </div>
                        <div class="carousel-item">
                            <%= image_tag 'auth_image-3.jpeg', class: 'd-block auth-image', alt: "test3" %>
                            <div class="carousel-caption d-none d-md-block">
                                <div class="banner-text">
                                    <h2>Language Learning</h2>
                                    <p>Browse through various levels of categories in learning different languages such as Nihonggo and Korean.</p>
                                </div>	
                            </div>
                        </div>
                    </div>
                </div>	   
            </div>
	    </div>
    </div>
</section>